<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="choose_delivery_package_view_form" model="ir.ui.view">
        <field name="name">choose.delivery.package.form</field>
        <field name="model">choose.delivery.package</field>
        <field name="inherit_id" ref="delivery.choose_delivery_package_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//label[@for='shipping_weight']" position="before">
                <field name="customs_package" invisible="1"/>
                <field name="height" attrs="{'invisible': [('customs_package','=', False)], 'required': [('customs_package','=', True)]}"/>
                <field name="width" attrs="{'invisible': [('customs_package','=', False)], 'required': [('customs_package','=', True)]}"/>
                <field name="packaging_length" attrs="{'invisible': [('customs_package','=', False)], 'required': [('customs_package','=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>