<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="stock.res_config_settings_view_form" />
            <field name="arch" type="xml">
            	<xpath expr="//div[@data-key='stock']//div[@id='delivery']" position="before">
            		<div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auto_download_shipping_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_download_shipping_label"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                Automatic download shipping labels when delivery orders are confirmed.
                            </div>
                        </div>
                    </div>
            	</xpath>
            </field>
        </record>
    </data>
</odoo>