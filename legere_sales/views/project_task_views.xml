<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="customer_ID" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                    <field name="olympia_login" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_task_tree2">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="customer_ID" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>