<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <div class="oe_button_box" name="button_box" position="after">
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('license_expired', '=', False)]}">
                        <p class="alert alert-warning"> Selected license is expired.</p>
                    </div>
                </div>
                <field name="partner_shipping_id" position="after">
                    <field name="license_partner_id" attrs="{'invisible': [('license_required', '=', False)], 'required': [('license_required', '!=', False)]}"/>
                    <field name="license_required" invisible="1"/>
                    <field name="license_expired" invisible="1"/>
                    <field name="allowed_change_unit_price" invisible="1"/>
                    <field name="price_change_approved" invisible="1"/>
                </field>

                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                    <field name="dummy_price_unit" attrs="{'column_invisible': [('parent.allowed_change_unit_price', '!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">{'readonly': [('qty_invoiced', '&gt;', 0)], 'column_invisible': [('parent.allowed_change_unit_price', '=', False)]}</attribute>
                </xpath>

                <field name="payment_term_id" position="after">
                    <field name="customer_current_limit"/>
                </field>

                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="after">
                    <button name="action_confirm_check" id="action_confirm_check_primary"
                        string="Check and Confirm" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="after">
                    <button name="action_confirm_check" id="action_confirm_check_secondary"
                        string="Check and Confirm" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                </xpath>
                <xpath expr="//button[@name='action_draft']" position="after">
                    <button name="action_approve_price_change" type="object" string="Approve Price Change" attrs="{'invisible': [('price_change_approved', '!=', False)]}" class="btn btn-secondary" groups="sales_team.group_sale_manager"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('is_company', '=', True)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>