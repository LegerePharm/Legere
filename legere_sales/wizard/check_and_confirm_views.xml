<odoo>
    <data>
        <record id="view_sale_order_check_confirm_fingerprint_wizard" model="ir.ui.view">
            <field name="name">Sale Order Check Confirm Wizard</field>
            <field name="model">sale.order.check.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose New Location">
                    <field name="sale_order_id" invisible="1"/>
                    <field name="warning_type" invisible="1"/>
                    <div attrs="{'invisible': [('warning_type', '!=', 'license_expired')]}">
                        <strong>Selected license is expired.</strong>
                    </div>
                    <footer>
                        <button string="Cancel" class="btn-primary" special="cancel" />
                        <button name="action_force_confirm" string="Continue Anyways" type="object" class="btn-default" groups="sales_team.group_sale_manager"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_order_check_confirm_wizard" model="ir.actions.act_window">
            <field name="name">Sale Order Check Confirm Action</field>
            <field name="res_model">sale.order.check.confirm.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_check_confirm_fingerprint_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>