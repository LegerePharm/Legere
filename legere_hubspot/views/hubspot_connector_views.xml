    <record model="ir.ui.view" id="hubspot_log_form_view">
        <field name="name">hubspot.log.form.view</field>
        <field name="model">hubspot.log</field>
        <field name="arch" type="xml">
            <form string="Hubspot Log">
                <header>
                    <button name="update_contact" string='Update' type='object' attrs="{'invisible': [('is_updated', '!=', False)]}"/>
