<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_custom_flow_form" model="ir.ui.view">
            <field name="name">product.template.custom.flow.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="is_custom"/>
                        <label for="is_custom"/>
                    </div>
                </div>
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="custom_project_id" attrs="{'invisible':[('is_custom', '=', False)], 'required':[('is_custom', '!=', False)]}" options="{'no_create_edit': 1}" domain="[('is_work_preparation', '=', 1)]"/>
                    <field name="group_task" widget="boolean_toggle" attrs="{'invisible':[('is_custom', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>