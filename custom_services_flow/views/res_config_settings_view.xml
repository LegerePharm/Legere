<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="custom_service_sale_config_view" model="ir.ui.view">
            <field name="name">custom.service.sale.inherited</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='sale_config_online_confirmation_sign']" position="before">
                    <div class="col-12 col-lg-6 o_setting_box" id="sale_config_custom_services">
                        <div class="o_setting_right_pane"><span class="o_form_label">Custom Service Flow</span><span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"></span>
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="custom_project_id" string="Project for Custom Services" class="col-3 col-lg-3 o_light_label"/>                                        
                                    <field name="custom_project_id" class="oe_inline" options="{'no_create_edit': 1}" domain="[('is_work_preparation', '=', 1)]"/>                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>