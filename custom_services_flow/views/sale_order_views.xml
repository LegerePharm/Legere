<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Moving Customer Reference to a more logical location and making it required-->
                <xpath expr="//field[@name='client_order_ref']" position="replace"/>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="client_order_ref" string='Reference' attrs="{'required': [('is_custom_service', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='require_signature']" position="before">
                    <field name="is_custom_service" string="Is Custom Project"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>