<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking" inherit_id="stock.report_picking">
            <xpath expr="//div[@name='right_box']" position="replace">
                <div class="col-4" name="right_box">
                    <t t-if="o.delivery_picking">
                        <div t-field="o.delivery_picking" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                    </t>
                    <t t-else="">
                        <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                    </t>
                </div>
            </xpath>
        </template>
    </data>
</odoo>