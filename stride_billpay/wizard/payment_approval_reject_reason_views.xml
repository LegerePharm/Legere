<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_approval_reject_reason" model="ir.ui.view">
        <field name="name">Payment Approval Reject Reason</field>
        <field name="model">payment.approval.reject.reason</field>
        <field name="arch" type="xml">
            <form string="Payment Approval Reject Reason">
                <p class="oe_grey">
                    Please provide the reason and click on submit.
                </p>
                <field name="reason" nolabel="1"/>
                <footer>
                    <button name="action_submit_reason" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_payment_approval_reject_reason" model="ir.actions.act_window">
        <field name="name">Payment Approval Reject Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.approval.reject.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>