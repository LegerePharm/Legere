<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr='//button[@name="action_draft"]' position='after'>
                    <field name="amount_payment_due" invisible="1"/>
                    <button name="action_stride_sale_payment" string='Register Payment'
                        type='object' attrs="{'invisible': [('amount_payment_due', '&lt;=', 0)]}"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="transaction_ids" invisible="1" />
                    <button name="action_view_payment_transactions" type="object"
                            class="oe_stat_button" icon="fa-money"
                            string="Payment Transaction"
                            attrs="{'invisible': [('transaction_ids', '=', [])]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>