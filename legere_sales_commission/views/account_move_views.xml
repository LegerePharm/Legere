<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page id="commission_tab" name="commission_tab" string="Commission Lines" attrs="{'invisible': [('commission_lines', '=', [])]}">
                        <field name="commission_lines">
                            <tree>
                                <field name="commission_type"/>
                                <field name="user_id"/>
                                <field name="date"/>
                                <field name="amount"/>
                                <field name="adjusted_amount"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="user_id"/>
                                        <field name="commission_type"/>
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="date"/>
                                        <field name="amount" attrs="{'invisible': [('commission_type', '=', 'adjusted_sale_value_discount')]}"/>
                                        <field name="adjusted_amount" attrs="{'invisible': [('commission_type', '!=', 'adjusted_sale_value_discount')]}"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>