<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_po_bill_batch_form" model="ir.ui.view">
            <field name="name">import.po.bill.batch.form</field>
            <field name="model">import.po.bill.batch</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="csv_file"/>
                    </group>
                    <footer>
                        <button string="Import" name="do_action" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_po_bill_batch_action" model="ir.actions.act_window">
            <field name="name">Import Purchase Bill Batch</field>
            <field name="res_model">import.po.bill.batch</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Import Purchase Bill Batch" id="menu_import_purchase_bill_batch" parent="purchase.menu_procurement_management"
              action="import_po_bill_batch_action" sequence="9"/>

    </data>
</odoo>