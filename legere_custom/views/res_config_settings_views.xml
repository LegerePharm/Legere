<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Purchase Bill Batch</h2>
                <div class="row mt16 o_settings_container" name="purchase_bill_batch_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="purchase_bill_batch">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="shipping_items"/>
                            <div class="text-muted">
                                Shipping items for purchase order bill batch (comma separated) For example Shipping (Shipping),UPS Ground (UPS Ground).
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="shipping_items" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>