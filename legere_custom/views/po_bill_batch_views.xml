<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_po_bill_batch_form" model="ir.ui.view">
            <field name="name">po.bill.batch.form</field>
            <field name="model">po.bill.batch</field>
            <field name="arch" type="xml">
                <form string="Purchase Bill Batch" create="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Batch Reference" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </group>
                            <group>
                                <field name="purchase_order_amount"/>
                                <field name="shipping_cost"/>
                                <field name="amount_total"/>
                                <field name="actual_amount_total"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="purchase_order" string="Purchase Orders" attrs="{'invisible': [('purchase_order_ids', '=', [])]}">
                                <field name="purchase_order_ids"/>

                            </page>
                            <page name="missing_orders" string="Missing Orders" attrs="{'invisible': [('missing_order_ids', '=', [])]}">
                                <field name="missing_order_ids">
                                    <tree>
                                        <field name="po_number"/>
                                        <field name="name" optional="hide"/>
                                    </tree>
                                    <form>
                                        <field name="po_number"/>
                                        <field name="name"/>
                                    </form>
                                </field>
                            </page>
                            <page name="shipping_cost" string="Shipping Cost" attrs="{'invisible': [('shipping_cost_ids', '=', [])]}">
                                <field name="shipping_cost_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="amount"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="amount"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_po_bill_batch_list" model="ir.ui.view">
            <field name="name">po.bill.batch.list</field>
            <field name="model">po.bill.batch</field>
            <field name="arch" type="xml">
                <tree string="Purchase Bill Batch" create="1" edit="1">
                    <field name="name"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="purchase_order_amount" optional="hide"/>
                    <field name="shipping_cost" optional="hide"/>
                    <field name="amount_total"/>
                    <field name="actual_amount_total"/>
                </tree>
            </field>
        </record>

        <record id="action_po_bill_batch_form" model="ir.actions.act_window">
            <field name="name">Purchase Bill Batch</field>
            <field name="res_model">po.bill.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_po_bill_batch_list"/>
        </record>

        <menuitem id="menu_po_bill_batch" name="Purchase Bill Batch"
            parent="purchase.menu_procurement_management"
            action="action_po_bill_batch_form"
            groups="purchase.group_purchase_manager" sequence="10"/>
    </data>
</odoo>
