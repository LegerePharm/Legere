<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_form">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="po_bill_batch_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_purchase_order_filter">
            <field name="name">request.quotation.select</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="po_bill_batch_id"/>
                </field>
                <xpath expr="//group//filter[@name='order_date']" position="after">
                    <filter string="Purchase Bill Batch" name="purchase_bill_batch" domain="[]" context="{'group_by': 'po_bill_batch_id'}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="purchase_order_view_search">
            <field name="name">purchase.order.select</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_search" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="po_bill_batch_id"/>
                </field>
                <xpath expr="//group//filter[@name='order_date']" position="after">
                    <filter string="Purchase Bill Batch" name="purchase_bill_batch" domain="[]" context="{'group_by': 'po_bill_batch_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>